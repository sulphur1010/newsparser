

<!--=== Breadcrumbs ===-->
<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="pull-left">Login</h1>
        <ul class="pull-right breadcrumb">
            <li><%=link_to("Home",:root)%></li>
          
            <li class="active">Login</li>
        </ul>
    </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->


<div class="container">		
	<div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">


         
                <div class="reg-header">            
                    <h2>Login to your account</h2>
                </div>
					<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{:class=>"regpage"}) do |f| %>

                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon"><i class="icon-user"></i></span>
                    <%= f.email_field :email, :autofocus => true,:class=>"form-control" %>
                </div>                    
                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon"><i class="icon-lock"></i></span>
  					<%= f.password_field :password,:class=>"form-control" %>

                  </div>                    

                <div class="row">
                    <div class="col-md-6">
                        <label class="checkbox"><input type="checkbox"> Stay signed in</label>                        
                    </div>
                    <div class="col-md-6">
                        <%= f.submit "Sign in",:class=>"btn-u" %>                    
                    </div>
                </div>
                <%end%>
                <hr>

                <h4>Forget your Password ?</h4>
                <p>no worries, <%= link_to "click here", new_password_path(resource_name),:class=>"color-green" %> to reset your password.</p>
            </form>            
        </div>
    </div><!--/row-->
</div><!--/container-->		
<!--=== End Content Part ===-->

