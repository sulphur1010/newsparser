<!--=== Content Part ===-->
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put ,:class=>"reg-page"}) do |f| %>
  <%= devise_error_messages! %>


                <div class="reg-header">
                    <h2>Edit Profile</h2>
                    <p>Keep your profile updated.</p>                    
                </div>

  <%= f.hidden_field :reset_password_token %>

  <%= f.label :password, "New password" %>
  <%= f.password_field :password, :autofocus => true ,:class=>"form-control margin-bottom-40"%>

  
  <%= f.label :password_confirmation, "Confirm new password" %>
  <%= f.password_field :password_confirmation,:class=>"form-control margin-bottom-40" %>

  <div><%= f.submit "Change my password" ,:class=>"btn-u"%></div>
<% end %>
