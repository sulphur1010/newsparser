<!--=== Breadcrumbs ===-->
<div class="breadcrumbs margin-bottom-40">
    <div class="container">
        <h1 class="pull-left">Forgot Password</h1>
        <ul class="pull-right breadcrumb">
            <li><%=link_to("Home",:root)%></li>
            <li><%=link_to("Login",new_session_path(resource_name))%></li>
            <li class="active">Edit Profile</li>

        </ul>r
    </div><!--/container-->
</div><!--/breadcrumbs-->
<!--=== End Breadcrumbs ===-->



<!--=== Content Part ===-->
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post,:class=>"reg-page" }) do |f| %>
  <%= devise_error_messages! %>

                <div class="reg-header">
                    <h2>Reset Password</h2>
                    <p>Don't have an account? <%= link_to "here", new_registration_path(resource_name) %>  to signup your account.</p>                    
                </div>
			<label>Email <span class="color-red">*</span></label>
                <%= f.email_field :email, :autofocus => true,:class=>"form-control margin-bottom-20" %>

  <div><%= f.submit "Send me reset password instructions",:class=>"btn-u" %></div>
<% end %>
